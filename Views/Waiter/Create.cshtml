@model RestoranBoshqaruvi.Models.Order

<h2>Yangi Buyurtma Qo'shish</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label for="Dish" class="form-label">Ovqat Nomi</label>
        <input type="text" class="form-control" id="Dish" name="Dish" required />
    </div>

    <div class="form-group mb-3">
        <label for="Price" class="form-label">Narxi</label>
        <input type="number" class="form-control" id="Price" name="Price" step="0.01" required />
    </div>

    <div class="form-group mb-3">
        <label for="WaiterId" class="form-label">Ofitsiant ID</label>
        <input type="number" class="form-control" id="WaiterId" name="WaiterId" required />
    </div>

    <button type="submit" class="btn btn-success">Saqlash</button>
    <a class="btn btn-secondary" asp-action="ViewOrders">Bekor qilish</a>
</form>
